{
    "name": "Getter",
    "version": "1.1.0",
    "description": "Automatically find fonts, colors and more on any page!",
    "permissions": [
      "tabs",
      "activeTab",
      "declarativeContent",
      "webNavigation",
      "storage",
      "notifications",
      "http://*/*", 
      "https://*/*"
    ],
    "background": {
      "scripts": ["dist/background.js"],
      "persistent": false
    },
    "options_page": "./dist/options.html",
    "page_action": {
      "default_title": "Getter",
      "default_popup": "./dist/popup.html",
      "default_icon": {
        "16": "images/color_16px.png",
        "32": "images/color_32px.png",
        "48": "images/color_48px.png",
        "128": "images/color_128px.png"
      }
    },
    "icons": {
        "16": "images/color_16px.png",
        "32": "images/color_32px.png",
        "48": "images/color_48px.png",
        "128": "images/color_128px.png"
    },
    "manifest_version": 2
  }
  